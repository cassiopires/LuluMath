<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fakedomain.admin.lulumath.MainActivity"
    android:background="#7e57c2"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Selecione uma operação:"
        android:id="@+id/textViewSelecioneOperacao"
        android:textSize="24sp"
        android:paddingStart="26sp"
        android:background="#6a1b9a"
        android:textColor="#fff"
        android:padding="10sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingEnd="26sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowOrderPreserved="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textViewSelecioneOperacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewSoma"
            android:background="@drawable/soma"
            android:clickable="false"
            android:layout_alignTop="@+id/imageViewSubtracao"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Soma"
            android:id="@+id/textViewSoma"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_alignBottom="@+id/imageViewSoma"
            android:layout_alignLeft="@+id/textViewSubtracao"
            android:layout_alignStart="@+id/textViewSubtracao"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewSubtracao"
            android:background="@drawable/subtracao"
            android:layout_alignBottom="@+id/textViewMultiplicacao"
            android:layout_toRightOf="@+id/imageViewDivisao"
            android:layout_toEndOf="@+id/imageViewDivisao"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Subtração"
            android:id="@+id/textViewSubtracao"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageViewMultiplicacao"
            android:layout_toEndOf="@+id/imageViewMultiplicacao"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewMultiplicacao"
            android:background="@drawable/multiplicacao"
            android:layout_alignTop="@+id/imageViewDivisao"
            android:layout_alignRight="@+id/textViewSelecioneOperacao"
            android:layout_alignEnd="@+id/textViewSelecioneOperacao"
            android:layout_marginEnd="43dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Multiplicação"
            android:id="@+id/textViewMultiplicacao"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_below="@+id/textViewDivisao"
            android:layout_toRightOf="@+id/textViewSoma"
            android:layout_toEndOf="@+id/textViewSoma"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageViewDivisao"
            android:background="@drawable/divisao"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textViewSelecioneOperacao"
            android:layout_alignStart="@+id/textViewSelecioneOperacao"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Divisão"
            android:id="@+id/textViewDivisao"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_below="@+id/textViewSelecioneOperacao"
            android:layout_alignLeft="@+id/textViewSelecioneOperacao"
            android:layout_alignStart="@+id/textViewSelecioneOperacao"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center_vertical" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="[Sobre o LuluMath]"
        android:id="@+id/textViewSobre"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#E1BEE7" />

</RelativeLayout>
