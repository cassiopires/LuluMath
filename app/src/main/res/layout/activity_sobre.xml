<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fakedomain.admin.lulumath.Sobre"
    android:background="#1565c0">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewSobre"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_launcher_lulu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sobre o LuluMath"
        android:id="@+id/textViewTituloSobre"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewSobre"
        android:layout_toEndOf="@+id/imageViewSobre"
        android:paddingTop="10sp"
        android:textColor="#FFF" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/imageViewSobre"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewTextoSobre"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:layout_below="@+id/imageViewSobre"
            android:layout_alignLeft="@+id/scrollView"
            android:layout_alignStart="@+id/scrollView"
            android:text="Sobre" />
    </ScrollView>

</RelativeLayout>
