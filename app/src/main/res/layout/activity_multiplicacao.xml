<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Multiplicacao"
    android:background="#FF5722">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewAcertoErro"
        android:background="@drawable/trofeu_800px"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTituloMultiplicacao"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"
        android:text="Exercícios de Multiplicação"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor 1"
        android:id="@+id/textViewValor1Multiplicacao"
        android:textSize="@dimen/tamanho_valor"
        android:textColor="#fff"
        android:textAlignment="viewEnd"
        android:width="100dp"
        android:layout_below="@+id/textViewTituloFase"
        android:layout_alignLeft="@+id/textViewValor2Multiplicacao"
        android:layout_alignStart="@+id/textViewValor2Multiplicacao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x"
        android:id="@+id/textViewSinalMultiplicacao"
        android:textSize="@dimen/tamanho_valor"
        android:textColor="#fff"
        android:layout_below="@+id/textViewValor1Multiplicacao"
        android:layout_alignRight="@+id/textViewValor2Multiplicacao"
        android:layout_alignEnd="@+id/textViewValor2Multiplicacao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor 2"
        android:id="@+id/textViewValor2Multiplicacao"
        android:textSize="@dimen/tamanho_valor"
        android:textColor="#fff"
        android:textAlignment="viewEnd"
        android:width="100dp"
        android:layout_below="@+id/textViewSinalMultiplicacao"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="#fff"
        android:id="@+id/view"
        android:layout_below="@+id/textViewValor2Multiplicacao"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextResultadoMultiplicacao"
        android:background="#FFCCBC"
        android:textColor="#fff"
        android:textSize="30sp"
        android:padding="8dp"
        android:width="50dp"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:textAlignment="viewEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fase 0"
        android:id="@+id/textViewTituloFase"
        android:textColor="#FFCCBC"
        android:textSize="20sp"
        android:layout_below="@+id/textViewTituloMultiplicacao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingStart="1dp" />

</RelativeLayout>