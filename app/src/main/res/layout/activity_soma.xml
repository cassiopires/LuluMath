<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Soma"
    android:background="#1565c0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTituloSomar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"
        android:text="ExercÃ­cios  de Soma"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor 1"
        android:id="@+id/textViewValor1Somar"
        android:textSize="@dimen/tamanho_valor"
        android:textColor="#fff"
        android:layout_below="@+id/textViewTituloFase"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/textViewSinalSomar"
        android:textSize="@dimen/tamanho_valor"
        android:textColor="#fff"
        android:layout_below="@+id/textViewValor1Somar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Valor 2"
        android:id="@+id/textViewValor2Somar"
        android:textSize="@dimen/tamanho_valor"
        android:textColor="#fff"
        android:layout_below="@+id/textViewSinalSomar"
        android:layout_alignLeft="@+id/textViewValor1Somar"
        android:layout_alignStart="@+id/textViewValor1Somar" />

    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="#fff"
        android:id="@+id/view"
        android:layout_below="@+id/textViewValor2Somar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextResultadoSoma"
        android:background="#90caf9"
        android:textColor="#fff"
        android:textSize="30sp"
        android:padding="8dp"
        android:width="50dp"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewPosNeg"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fase 0"
        android:id="@+id/textViewTituloFase"
        android:textColor="#b3e5fc"
        android:textSize="20sp"
        android:layout_below="@+id/textViewTituloSomar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingStart="2dp" />

</RelativeLayout>
